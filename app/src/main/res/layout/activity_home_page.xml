<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_margin="10dp"
            android:id="@+id/card_1"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:onClick="BasicTopics"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/basic_py"
                android:id="@+id/basic_image"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python Basic"
                android:textSize="20dp"
                android:textColor="#000"
                android:id="@+id/python_basic_text"
                android:layout_below="@id/basic_image"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn Basic of Python like Syntax, Varibale etc"
                android:textSize="13dp"
                android:textColor="#77000000"
                android:layout_marginTop="-4dp"
                android:id="@+id/python_basic_desc"
                android:layout_marginLeft="4dp"
                android:layout_toLeftOf="@+id/LearnNowBasicBtn"
                android:layout_below="@id/python_basic_text"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/basic_image"
                android:layout_marginTop="13dp"
                android:layout_marginRight="6dp"
                android:text="Learn Now"

                android:textSize="12dp"
                android:id="@+id/LearnNowBasicBtn"
                android:textColor="#fff"
                android:background="@drawable/button_round_blue"/>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="BasicTopics"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/intermediate_py"
                    android:id="@+id/intermediate_image"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python Intermediate"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:id="@+id/intermediate_text"
                    android:layout_below="@id/intermediate_image"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn Basic of Python like Syntax, Varibale etc"
                    android:textSize="13dp"
                    android:textColor="#77000000"
                    android:layout_marginTop="-4dp"
                    android:id="@+id/python_inter_desc"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/LearnInterBtn"
                    android:layout_below="@id/intermediate_text"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/intermediate_image"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="6dp"
                    android:text="Learn Now"

                    android:textSize="12dp"
                    android:id="@+id/LearnInterBtn"
                    android:textColor="#fff"
                    android:background="@drawable/button_round_blue"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="BasicTopics"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/advance_one_py"
                    android:id="@+id/Adv_image_1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python Advance 1"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:id="@+id/python_Advance_1_text"
                    android:layout_below="@id/Adv_image_1"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn Basic of Python like Syntax, Varibale etc"
                    android:textSize="13dp"
                    android:textColor="#77000000"
                    android:layout_marginTop="-4dp"
                    android:id="@+id/python_Adv_1_desc"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/LearnNowAdve_one_Btn"
                    android:layout_below="@id/python_Advance_1_text"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/Adv_image_1"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="6dp"
                    android:text="Learn Now"

                    android:textSize="12dp"
                    android:id="@+id/LearnNowAdve_one_Btn"
                    android:textColor="#fff"
                    android:background="@drawable/button_round_blue"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="BasicTopics"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/advance_one_py"
                    android:id="@+id/Adv_2_image"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python Advance 2"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:id="@+id/python_Adv_2_text"
                    android:layout_below="@id/Adv_2_image"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn Basic of Python like Syntax, Varibale etc"
                    android:textSize="13dp"
                    android:textColor="#77000000"
                    android:layout_marginTop="-4dp"
                    android:id="@+id/python_Adv_2_desc"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/Adv_two_btn"
                    android:layout_below="@id/python_Adv_2_text"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/Adv_2_image"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="6dp"
                    android:text="Learn Now"

                    android:textSize="12dp"
                    android:id="@+id/Adv_two_btn"
                    android:textColor="#fff"
                    android:background="@drawable/button_round_blue"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>