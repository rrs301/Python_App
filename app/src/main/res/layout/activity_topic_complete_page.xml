<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicCompletePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/text_01"
        android:text="Great Work!!!"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_01"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:text="Now Let's Do some Practice, \nClick Exercise Button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:text="Excerise"
        android:id="@+id/ExceriseButton"
        android:layout_above="@+id/buttonNext"
        android:textSize="18dp"
        android:textColor="#fff"
        android:onClick="Continue"
        android:background="@drawable/button_round_blue"/>
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="10dp"
    android:text="Next Lesson"
    android:id="@+id/buttonNext"
    android:textSize="18dp"
    android:textColor="#fff"
    android:onClick="Continue"
    android:background="@drawable/button_round"/>
</RelativeLayout>